<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".writeyournote">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="9sp"
        android:background="@drawable/notebook"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ETtitreNote"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"

                android:hint="@string/hintTitre"
                 />

            <Button
                android:id="@+id/Bannuler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:onClick="Annuler"
                android:background="@drawable/deletebutton"
                android:text="@string/annulerButton" />

            <Button
                android:id="@+id/Bsave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:background="@drawable/editbutton"
                android:textColor="@color/black"
                android:text="@string/EnregistrerButton" />

        </LinearLayout>

        <EditText
            android:id="@+id/ETnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:layout_marginTop="30sp"
            android:hint="@string/hintNote"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>